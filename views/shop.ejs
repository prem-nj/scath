      document.addEventListener("DOMContentLoaded", function () {
        const heroVideo = document.getElementById("heroVideo");
        const loadingSpinner = document.querySelector(".hero-loading-spinner");
        const fallbackImage = document.querySelector(".hero-video-fallback");

        if (heroVideo) {
          // Hide spinner when video can play
          heroVideo.addEventListener("canplay", function () {
            if (loadingSpinner) loadingSpinner.style.display = "none";
            heroVideo.style.opacity = "1";
          });

          // Play video
          heroVideo.play().catch(function (err) {
            console.log("Autoplay failed:", err);
            if (fallbackImage) fallbackImage.style.opacity = "1";
            if (loadingSpinner) loadingSpinner.style.display = "none";
          });

          // Simple loop handler - restart when ended
          heroVideo.addEventListener("ended", function () {
            this.currentTime = 0;
            this.play();
          });
        }
      });
