      /* Hero Section Styles */
      .hero-section {
        position: relative;
        width: 100%;
        height: 100vh;
        min-height: 600px;
        overflow: hidden;
        background: #000;
      }

      .hero-video-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
      }

      .hero-video-container::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.35);
        z-index: 1;
      }

      .hero-video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        opacity: 0;
        animation: fadeIn 1s ease-in forwards;
        pointer-events: none;
      }

      .hero-video-fallback {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        opacity: 0;
        animation: fadeIn 1s ease-in forwards;
        z-index: 0;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      .hero-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        z-index: 2;
        width: 100%;
        padding: 20px;
        animation: slideUp 0.8s ease-out 0.3s both;
      }

      @keyframes slideUp {
        from {
          opacity: 0;
          transform: translate(-50%, -30%);
        }
        to {
          opacity: 1;
          transform: translate(-50%, -50%);
        }
      }

      .hero-brand-name {
        font-size: clamp(3rem, 12vw, 8rem);
        font-weight: 900;
        color: white;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        margin: 0;
        line-height: 1.1;
        text-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
      }

      .hero-tagline {
        font-size: clamp(1rem, 3vw, 1.5rem);
        color: rgba(255, 255, 255, 0.9);
        margin-top: 1rem;
        font-weight: 300;
        letter-spacing: 0.05em;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
      }

      .hero-cta {
        display: inline-block;
        margin-top: 2rem;
        padding: 1rem 2.5rem;
        background: white;
        color: #000;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        border-radius: 50px;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        cursor: pointer;
        border: none;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
      }

      .hero-cta:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.4);
        background: #f0f0f0;
      }

      .hero-cta:active {
        transform: translateY(-1px);
      }

      /* Loading Spinner */
      .hero-loading-spinner {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 3;
        opacity: 1;
        animation: fadeOut 0.5s ease-out 1.5s forwards;
      }

      @keyframes fadeOut {
        from {
          opacity: 1;
          visibility: visible;
        }
        to {
          opacity: 0;
          visibility: hidden;
        }
      }

      .spinner {
        width: 50px;
        height: 50px;
        border: 4px solid rgba(255, 255, 255, 0.3);
        border-top: 4px solid white;
        border-radius: 50%;
        animation: spin 1s linear infinite;
      }

      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }

      /* Responsive Design */
      @media (max-width: 640px) {
        .hero-section {
          min-height: 500px;
        }

        .hero-brand-name {
          font-size: clamp(2rem, 10vw, 4rem);
        }

        .hero-content {
          padding: 20px;
        }
      }

      /* Pause on Hover (Desktop Only) */
      @media (hover: hover) {
        .hero-cta:focus-visible {
          outline: 3px solid white;
          outline-offset: 2px;
        }
      }

      /* Smooth scroll behavior */
      html {
        scroll-behavior: smooth;
      }
