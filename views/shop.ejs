  <script>
      let quantity = 1;

      function openmodel(name, price, image) {
        document.getElementById("name").innerText = name;
        document.getElementById("price").innerText = "Rs " + price;
        document.querySelector(".imageproduct").src = image;
        document.querySelector(".product_model").classList.remove("hidden");
        document.getElementById("maincontent").classList.add("hidden");
        quantity = 1;
        updateQuantity();
      }

      function displaysize(size) {
        document.getElementById("size_display").innerText = "SIZE: " + size;
      }

      function increaseQuantity() {
        quantity++;
        updateQuantity();
      }

      function decreaseQuantity() {
        if (quantity > 1) {
          quantity--;
          updateQuantity();
        }
      }

      function updateQuantity() {
        document.getElementById("quantity_display").innerText = quantity;
      }

      function closemodel() {
        document.querySelector(".product_model").classList.add("hidden");
        document.getElementById("maincontent").classList.remove("hidden");
      }
    </script>


