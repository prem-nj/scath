    <script>
      // Hero Video Management and Optimization
      document.addEventListener("DOMContentLoaded", function () {
        const heroVideo = document.getElementById("heroVideo");
        const loadingSpinner = document.querySelector(".hero-loading-spinner");
        const videoContainer = document.querySelector(".hero-video-container");
        const fallbackImage = document.querySelector(".hero-video-fallback");

        // Video Ready Handler
        function handleVideoReady() {
          if (loadingSpinner) {
            loadingSpinner.style.display = "none";
          }
          heroVideo.style.opacity = "1";
          // Ensure video plays
          heroVideo.play().catch((err) => {
            console.warn("Autoplay prevented:", err);
          });
        }

        // Video Error Handler
        function handleVideoError() {
          console.warn("Video failed to load, using fallback image");
          if (loadingSpinner) {
            loadingSpinner.style.display = "none";
          }
          if (fallbackImage) {
            fallbackImage.style.opacity = "1";
          }
        }

        // Check if video can play
        if (heroVideo) {
          // Force autoplay on load
          heroVideo.autoplay = true;
          heroVideo.muted = true;
          heroVideo.loop = true;

          // Handle when metadata is loaded
          heroVideo.addEventListener("canplay", handleVideoReady);

          // Handle errors
          heroVideo.addEventListener("error", handleVideoError);

          // Handle if source fails
          const sources = heroVideo.querySelectorAll("source");
          sources.forEach((source) => {
            source.addEventListener("error", handleVideoError);
          });

          // Fallback timeout in case video doesn't load
          setTimeout(() => {
            if (heroVideo.paused && heroVideo.currentTime === 0) {
              handleVideoError();
            }
          }, 5000);

          // Force continuous looping with JavaScript
          heroVideo.addEventListener(
            "ended",
            function () {
              this.currentTime = 0;
              this.play();
            },
            false
          );

          // Also listen for play event to ensure it continues
          heroVideo.addEventListener(
            "play",
            function () {
              // Keep playing
            },
            false
          );

          // Optimize for LCP - Prioritize video loading
          heroVideo.setAttribute("priority", "high");
        }

        // Keyboard Navigation for CTA Button
        const ctaButton = document.querySelector(".hero-cta");
        if (ctaButton) {
          ctaButton.addEventListener("keydown", function (e) {
            if (e.key === "Enter" || e.key === " ") {
              this.click();
            }
          });
        }

        // Reduce motion support
        if (window.matchMedia("(prefers-reduced-motion: reduce)").matches) {
          const style = document.createElement("style");
          style.textContent = `
            .hero-content,
            .hero-video {
              animation: none !important;
            }
          `;
          document.head.appendChild(style);
        }
      });

      // Ensure autoplay works on page visibility change
      document.addEventListener("visibilitychange", function () {
        const heroVideo = document.getElementById("heroVideo");
        if (heroVideo) {
          if (document.hidden) {
            heroVideo.pause();
          } else {
            heroVideo.play().catch((err) => {
              console.warn("Autoplay prevented:", err);
            });
          }
        }
      });

      // Ensure video plays on page load
      window.addEventListener("load", function () {
        const heroVideo = document.getElementById("heroVideo");
        if (heroVideo && heroVideo.paused) {
          heroVideo.play().catch((err) => {
            console.warn("Autoplay prevented:", err);
          });
        }
      });
    </script>
  </body>
