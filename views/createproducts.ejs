<!DOCTYPE html>
<html>
  <head>
    <title>Products Shop</title>

    <style>
      .size{
       border:1px solid black,
       padding: 3px;
      }
    </style>
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
      let quantity = 1;

      function openmodel(name, price, image) {
        document.getElementById("name").innerText = name;
        document.getElementById("price").innerText = "Rs " + price;
        document.querySelector(".imageproduct").src = image;
        document.querySelector(".product_model").classList.remove("hidden");
        document.getElementById("maincontent").classList.add("hidden");
        quantity = 1;
        updateQuantity();
      }

      function displaysize(size) {
        document.getElementById("size_display").innerText = "SIZE: " + size;
      }

      function increaseQuantity() {
        quantity++;
        updateQuantity();
      }

      function decreaseQuantity() {
        if (quantity > 1) {
          quantity--;
          updateQuantity();
        }
      }

      function updateQuantity() {
        document.getElementById("quantity_display").innerText = quantity;
      }

      function closemodel() {
        document.querySelector(".product_model").classList.add("hidden");
        document.getElementById("maincontent").classList.remove("hidden");
      }
    </script>
  </head>
  <body class="bg-gray-100 min-h-screen">
    <%if(success.length>0){%>
    <div
      id="flash-message"
      class="fixed top-5 right-5 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg transition-all duration-500 transform translate-x-0 opacity-100 z-50"
    >
      <%=success%>
    </div>
    <script>
      const flash = document.getElementById("flash-message");
      if (flash) {
        setTimeout(() => {
          flash.classList.add("translate-x-full", "opacity-0");
          setTimeout(() => {
            flash.remove();
          }, 500);
        }, 3000);
      }
    </script>
    <%}%>
    <!-- Header -->
    <div class="bg-gray-700 text-white py-4 px-8">
      <h1 class="text-xl font-semibold">
        Admin Dashboard - Product Management
      </h1>
    </div>

    <div class="max-w-7xl mx-auto p-8">
      <h2 class="text-xl text-gray-700 mb-6">Products to Display</h2>

      <div class="mb-6">
        <a
          href="/products/upload"
          class="inline-block bg-blue-600 text-white px-6 py-2.5 rounded-md hover:bg-blue-700 transition font-medium"
          >Add Another Product</a
        >
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <%products.forEach(pr=>{%>
        <div
          class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300"
        >
          <!-- Product Image Container -->
          <div class="relative bg-white group">
            <!-- Badge -->
            <div
              class="absolute top-3 left-3 bg-gray-200 px-2 py-1 text-xs font-bold text-gray-800 uppercase"
            >
              <% if(pr.discount>0){ %> SAVE <%=pr.discount %>% <% } else { %>
              BEST SELLER <% } %>
            </div>

            <!-- Action Icons -->
            <div class="absolute top-3 right-3 flex flex-col gap-2">
              <button
                class="bg-white p-2 rounded-full shadow-md hover:bg-gray-100 transition"
                onclick="openmodel('<%=pr.productName%>','<%=pr.price%>','<%=pr.image%>')"
              >
                <svg
                  class="w-4 h-4 text-gray-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <circle cx="12" cy="12" r="10" stroke-width="2" />
                  <circle cx="12" cy="12" r="3" fill="currentColor" />
                </svg>
              </button>
              <button
                class="bg-white p-2 rounded-full shadow-md hover:bg-gray-100 transition"
              >
                <svg
                  class="w-4 h-4 text-gray-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                  />
                </svg>
              </button>
            </div>

            <!-- Product Image -->
            <img
              src="<%= pr.image %>"
              alt="<%= pr.productName %>"
              class="w-full h-64 object-cover"
            />
          </div>

          <!-- Product Info -->
          <div class="p-4 bg-gray-50">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <h3 class="text-gray-700 font-normal text-sm mb-1">
                  <%= pr.productName %>
                </h3>
                <p class="text-gray-900 font-semibold text-base">
                  Rs. <%= pr.price.toLocaleString() %>
                </p>
              </div>
              <div>
                <a
                  href="/products/delete/<%=pr._id%>"
                  class="text-red-500 hover:text-red-700 text-xl font-bold"
                  >×</a
                >
              </div>
            </div>
          </div>
        </div>
        <%})%>
      </div>

      <div class="text-center space-x-4">
        <button
          class="bg-blue-600 text-white px-8 py-2.5 rounded-md hover:bg-blue-700 transition font-medium"
        >
          SAVE Changes
        </button>
        <a
          href="/"
          class="inline-block bg-gray-600 text-white px-8 py-2.5 rounded-md hover:bg-gray-700 transition font-medium"
        >
          Back to Homescreen
        </a>
      </div>
    </div>

    <!-- Modal outside main content -->
    <div
      class="product_model fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm z-50 flex items-center justify-center hidden"
    >
      <div
        class="border-2 rounded-2xl w-[70%] h-[70vh] flex bg-white overflow-hidden shadow-2xl relative"
      >
        <div
          class="left_box w-1/2 bg-gray-50 flex items-center justify-center p-8"
        >
          <img
            src=""
            class="imageproduct max-h-full w-full object-contain"
            alt="Product"
          />
        </div>

        <div class="right w-1/2 p-10 flex flex-col justify-center">
          <div class="detail flex flex-col gap-4">
            <p class="text-sm text-gray-500 uppercase tracking-widest">Scath</p>
            <h2 class="font-bold text-gray-900" id="name"></h2>
            <p class="text-2xl font-semibold text-gray-800" id="price"></p>

            <div class="mt-6">
              <p class="text-sm font-bold mb-3">SELECT SIZE</p>
              <p class="text-sm mb-3" id="size_display"></p>

              <!-- Quantity Selector -->
              <div class="mb-4">
                <p class="text-sm font-bold mb-3">QUANTITY</p>
                <div
                  class="flex items-center gap-4 border-2 border-gray-200 rounded-lg w-fit"
                >
                  <button
                    onclick="decreaseQuantity()"
                    class="px-4 py-2 hover:bg-gray-100 transition"
                  >
                    <svg width="12" height="2" fill="none" viewBox="0 0 12 2">
                      <path
                        d="M0 1H12"
                        stroke="currentColor"
                        stroke-width="1.5"
                      ></path>
                    </svg>
                  </button>
                  <span
                    id="quantity_display"
                    class="font-semibold text-lg min-w-[30px] text-center"
                    >1</span
                  >
                  <button
                    onclick="increaseQuantity()"
                    class="px-4 py-2 hover:bg-gray-100 transition"
                  >
                    <svg width="12" height="12" fill="none" viewBox="0 0 12 12">
                      <path
                        d="M0 6H12"
                        stroke="currentColor"
                        stroke-width="1.5"
                      ></path>
                      <path
                        d="M6 0V12"
                        stroke="currentColor"
                        stroke-width="1.5"
                      ></path>
                    </svg>
                  </button>
                </div>
              </div>

              <div class="flex flex-wrap gap-3">
                <button
                  class="size border-2 border-gray-200 px-4 py-2 rounded-md hover:border-black hover:bg-black hover:text-white transition-all font-medium"
                  onclick="displaysize('S')"
                >
                  S
                </button>
                <button
                  class="size border-2 border-gray-200 px-4 py-2 rounded-md hover:border-black hover:bg-black hover:text-white transition-all font-medium"
                  onclick="displaysize('M')"
                >
                  M
                </button>
                <button
                  class="size border-2 border-gray-200 px-4 py-2 rounded-md hover:border-black hover:bg-black hover:text-white transition-all font-medium"
                  onclick="displaysize('L')"
                >
                  L
                </button>
                <button
                  class="size border-2 border-gray-200 px-4 py-2 rounded-md hover:border-black hover:bg-black hover:text-white transition-all font-medium"
                  onclick="displaysize('XL')"
                >
                  XL
                </button>
                <button
                  class="size border-2 border-gray-200 px-4 py-2 rounded-md hover:border-black hover:bg-black hover:text-white transition-all font-medium"
                  onclick="displaysize('2XL')"
                >
                  2XL
                </button>
              </div>
            </div>

            <div class="btn flex gap-2 items-center justify-center">
              <button
                class="mt-8 bg-black text-white py-2 rounded-xl font-bold text-lg hover:bg-gray-800 transition-colors w-1/2 inline-block"
              >
                ADD TO CART
              </button>
              <button
                class="mt-8 bg-black text-white py-2 rounded-xl font-bold text-lg hover:bg-blue-500 transition-colors w-1/2"
              >
                BUY NOW
              </button>
            </div>
          </div>

          <button
            onclick="closemodel()"
            class="absolute top-5 right-5 text-gray-400 hover:text-black text-2xl"
          >
            ✕
          </button>
        </div>
      </div>
    </div>
  </body>
</html>
