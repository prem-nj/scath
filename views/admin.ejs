        <!-- Main Content -->
        <div class="p-6 bg-white border-gray-600">
          <h1 class="text-2xl font-bold text-gray-600">Create New Products</h1>
          <p class="mt-3 text-lg font-semibold text-gray-800 mb-4">
            Product detail
          </p>
          <p class="mt-3">Product image</p>
          <form
            action="/products/upload"
            method="post"
            class="space-y-4 mt-2"
            enctype="multipart/form-data"
          >
            <div>
              <input type="file" name="image" id="" class="mb-4" />
            </div>

            <div>
              <input
                type="text"
                name="productName"
                id=""
                placeholder="Product name"
                class="p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
              />

              <input
                type="text"
                name="price"
                id=""
                placeholder="Product Price"
                class="p-2 ml-8 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
              />

              <input
                type="text"
                name="discount"
                id=""
                placeholder="Discount Price"
                class="p-2 ml-6 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>

            <div>
              <h2 class="text-lg font-semibold text-gray-800 mb-4">
                Panel Details
              </h2>

              <div class="space-y-4 mb-4">
                <input
                  type="text"
                  name="bgcolor"
                  placeholder="Background Color"
                  class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
                <input
                  type="text"
                  name="pancolor"
                  placeholder="Panel Color"
                  class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
              </div>

              <div class="mb-4">
                <input
                  type="text"
                  name="textcolor"
                  placeholder="Text Color"
                  class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
              </div>

              <button
                type="submit"
                class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-6 py-2 rounded-lg transition"
              >
                Create New Product
              </button>
            </div>
          </form>

          <!-- Add your dashboard content here -->
        </div>
